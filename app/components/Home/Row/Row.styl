tr
  background: white
  margin: 0
  user-select: none

  td:first-child {
    text-transform: uppercase
  }

  td:nth-child(2) {
    background: gray
  }

  td
    width: 35px
    height: 35px
    margin: 0
    text-align: center
    border: 1px solid #DCDCDC
    box-sizing: border-box
    padding: 0

    img
      width: 34px
      height: 34px

  .color-fill{
    background: #C0C0C0 ;
  }
